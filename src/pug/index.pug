include modules/header
.container-fluid
    .row
        include modules/navbar
        .col-lg-10.page_content.text-center
            include modules/header_content
            .job.row
                .col-lg-3.col-md-6.job__item(data-toggle="modal" data-target="#create")
                    p.job__item__header
                        |Add New
                        span Job
                    p.job__item__content
                        i.fa.fa-plus
                .col-lg-3.col-md-6.job__item
                    p.job__item__header
                        | Urgent
                        span Job
                    p.job__item__content 1
                .col-lg-3.col-md-6.job__item
                    p.job__item__header
                        | Experied
                        span Job
                    p.job__item__content 1
                .col-lg-3.col-md-6.job__item
                    p.job__item__header
                        | All
                        span Job
                    p.job__item__content 1
            .row.information-job
                p.information-job__header
                    i.fa.fa.fa-suitcase
                    |Jobs
                .filter
                    form.row
                        .form-group.col.pr-1
                            .input-group
                                .input-group-prepend
                                    .input-group-text
                                        i.fa.fa-map-marker-alt
                                select.form-control
                                    option All Branch
                                    option Ha Noi
                                    option Da Nang
                                    option Ho Chi Minh
                        .form-group.col.px-1
                            .input-group
                                .input-group-prepend
                                    .input-group-text
                                        i.fa.fa-calendar
                                input(placeholder="All Position Type").form-control
                        .form-group.col.px-1
                            .input-group
                                .input-group-prepend
                                    .input-group-text
                                        i.fa.fa-bars
                                input(placeholder="All Categories").form-control
                        .form-group.col.px-1
                            .input-group
                                .input-group-prepend
                                    .input-group-text
                                        i.fa.fa-clock
                                input(placeholder="Status").form-control
                        .form-group.col.px-1
                            .input-group
                                .input-group-prepend
                                    .input-group-text
                                        i.fa.fa-search
                                input(placeholder="Enter Job titile,..").form-control
                        .form-group.col.pl-1
                            button.btn.btn-primary
                                i.fa.fa-search
                                | Search
                .table-responsive
                    table.table.table-bordered.table-hover.table-striped.table-vcenter.text-center
                        thead
                            tr
                                th(scope="row" ) .No
                                th(scope="row" ) Name
                                th(scope="row" ) Salary
                                th(scope="row" ) Position
                                th(scope="row" ) Target
                                th(scope="row" ) Quality
                                th(scope="row" ) Status
                                th(scope="row" ) Action

                        tbody
                            mixin tr
                                tr
                                    td 1
                                    td.visible-lg Java Develop Sun*
                                        sup.badge.badge-primary.badge-pill 0
                                    td Up to 7000$
                                    td Developer
                                    td
                                        span.badge.badge-warning 0 / 2
                                    td 0
                                    td.text-primary Expered on 2/2/2020
                                    td
                                        .btn-group.btn-group-xs
                                            button(data-toggle="modal" data-target="#edit").btn.btn-default.px-0
                                                .fa.fa-eye.text-warning
                                        .btn-group.btn-group-xs
                                            button(data-toggle="modal" data-target="#delete").btn.btn-default.px-0
                                                .fa.fa-trash.text-danger

                            +tr
                            +tr
                            +tr
                            +tr
                            +tr
                            +tr
                            +tr
                            +tr
                            +tr
                    nav(aria-label='Page navigation example')
                        ul.pagination
                            li.page-item
                                a.page-link(href='#') Previous
                            li.page-item
                                a.page-link(href='#') 1
                            li.page-itema
                                a.page-link(href='#') 2
                            li.page-item
                                a.page-link(href='#') 3
                            li.page-item
                                a.page-link(href='#') Next

#delete.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5#exampleModalLabel.modal-title Delete the candidate
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
            .modal-body
                | Are you want to delete it
            .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-danger(type='button') Delete

#edit.modal.fade(tabindex='-1', role='dialog', aria-labelledby='deleteLabel', aria-hidden='true')
    .modal-dialog(role='document')
        .modal-content
            .modal-header
                h5#deleteLabel.modal-title Edit the candidate
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
            .modal-body
                form.form
                    .form-group.row
                        label.col-sm-2.col-form-label.col-form-label-sm(for='colFormLabelSm') Name
                        .col-sm-10
                            input#colFormLabelSm.form-control.form-control-sm(type='text', placeholder='enter name')
                    .form-group.row
                        label.col-sm-2.col-form-label.col-form-label-sm(for='colFormLabelSm') Salary
                        .col-sm-10
                            input#colFormLabelSm2.form-control.form-control-sm(type='text', placeholder='enter salary')
                    .form-group.row
                        label.col-sm-2.col-form-label.col-form-label-sm(for='colFormLabelSm') Position
                        .col-sm-10
                            input#colFormLabelSm3.form-control.form-control-sm(type='text', placeholder='entrer position')

            .modal-footer
                button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                button.btn.btn-success(type='button') Save
